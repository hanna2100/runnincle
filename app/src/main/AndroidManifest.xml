<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.devhanna91.runnincle">
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <application
        android:name="com.devhanna91.runnincle.framework.presentation.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="${appLabel}"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-2332326582125862~2997067966"/>
        <service
            android:name="com.devhanna91.runnincle.util.FloatingService"
            android:enabled="true">
        </service>
        <activity
            android:name="com.devhanna91.runnincle.framework.presentation.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.devhanna91.runnincle.framework.presentation.MainActivity"
            android:exported="true"
            android:label="@string/app_name">
        </activity>
        <activity android:name="com.devhanna91.runnincle.framework.presentation.PermissionActivity" />
    </application>

</manifest>